<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="populate-languages" author="chatgpt">
        <loadData tableName="language" file="../data/languages.csv" encoding="UTF-8" relativeToChangelogFile="true">
            <column name="key" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="populate-words" author="chatgpt">
        <loadData tableName="word" file="../data/word-location.csv" encoding="UTF-8" relativeToChangelogFile="true">
            <column name="key" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="populate-translations" author="chatgpt">
        <loadData tableName="translation" file="../data/translations.csv" encoding="UTF-8" relativeToChangelogFile="true">
            <column name="word_key" type="STRING"/>
            <column name="language_key" type="STRING"/>
            <column name="value" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="populate-locations" author="chatgpt">
        <loadData tableName="location" file="../data/locations.csv" encoding="UTF-8" relativeToChangelogFile="true">
            <column name="id" type="UUID"/>
            <column name="name_key" type="STRING"/>
            <column name="type" type="STRING"/>
            <column name="parent_id" type="UUID"/>
            <column name="center" type="STRING"/>
            <column name="url" type="STRING"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
